<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Movie_description"
    android:background="@drawable/bg_color">


    <ImageView
        android:id="@+id/imgView_Img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/bee_movie" />

    <TextView
        android:id="@+id/tView_Title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center|bottom"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textStyle="bold"
        android:text="text_title" />

    <TextView
        android:id="@+id/tView_movieDuration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center|top"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text="movie_duration"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cinema_blue">

        <TextView
            android:id="@+id/tView_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Here goes the movie description." />

    </LinearLayout>

</LinearLayout>